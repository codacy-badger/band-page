{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <h1 class="col">{{ entity.title }}</h1>
        <div class="col text-right">
            {% trans from "blog_post" %}posted at{% endtrans %} {{ entity.createdAt|date("d.m.Y H:i") }} <br/>
            {% trans from "blog_post" %}updated at{% endtrans %} {{ entity.modifiedAt|date("d.m.Y H:i") }}
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col">
            {{ entity.description| raw }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ entity.date| date('H:i d.m.Y') }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ entity.location.name }} {{ entity.location.street }}, {{ entity.location.zip }} {{ entity.location.city }}
        </div>
    </div>
{% endblock %}
