{% extends 'admin-base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.street) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.city) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.zip) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
